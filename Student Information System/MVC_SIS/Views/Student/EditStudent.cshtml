@model Exercises.Models.ViewModels.StudentVM

@{
    ViewBag.Title = "EditStudent";
}

<h2>EditStudent</h2>


@using (Html.BeginForm())
{
    @Html.HiddenFor(m => m.Student.StudentId);
    <div class="form-group">
        @Html.LabelFor(m => m.Student.FirstName)
        @Html.TextBoxFor(m => m.Student.FirstName, new { @class = "form-controler", placeHolder = "Student First Name" })
        @Html.LabelFor(m => m.Student.LastName)
        @Html.TextBoxFor(m => m.Student.LastName, new { @class = "form-controler", placeHolder = "Student Last Name" })
        @Html.LabelFor(m => m.Student.GPA)
        @Html.TextBoxFor(m => m.Student.GPA, new { @class = "form-controler", placeHolder = "Student GPA" })
        @Html.LabelFor(m => m.Student.Major)
        @Html.DropDownListFor(m => m.Student.Major.MajorId, Model.MajorItems, "-Choose Any-", new { @class = "form-controler", placeHolder = "Major" })
        @Html.LabelFor(m => m.Student.Courses)
        @Html.ListBoxFor(m => m.SelectedCourseIds, Model.CourseItems, new { @class = "form-controler", placeHolder = "Courses" })

    </div>

    <div class="form-group">
        Opional Address
        @Html.LabelFor(m => m.Student.Address.City)
        @Html.TextBoxFor(m => m.Student.Address.City, new { @class = "form-controler", placeHolder = "City" })
        @Html.LabelFor(m => m.Student.Address.State)
        @Html.DropDownListFor(m => m.Student.Address.State.StateAbbreviation, Model.StateItems, "-Choose One-", new { @class = "form-controler", placeHolder = "State" })
        @Html.LabelFor(m=>m.Student.Address.PostalCode)
        @Html.TextBoxFor(m=>m.Student.Address.PostalCode, new { @class = "form-controler", placeHolder = "Postal" })
        @Html.LabelFor(m => m.Student.Address.Street1)
        @Html.TextBoxFor(m => m.Student.Address.Street1, new { @class = "form-controler", placeHolder = "Street1" })
        @Html.LabelFor(m => m.Student.Address.Street2)
        @Html.TextBoxFor(m => m.Student.Address.Street2, new { @class = "form-controler", placeHolder = "Street2" })
    </div>

    <div class="form-horizontal">
        <h4>StudentVM</h4>
        <hr />
        @Html.ValidationSummary(true, "", new { @class = "text-danger" })
        <div class="form-group">
            <div class="col-md-offset-2 col-md-10">
                <input type="submit" value="Save" class="btn btn-default" />
            </div>
        </div>
    </div>
}

<div>
    @Html.ActionLink("Back to List", "Index")
</div>

<script src="~/Scripts/jquery-1.10.2.min.js"></script>
<script src="~/Scripts/jquery.validate.min.js"></script>
<script src="~/Scripts/jquery.validate.unobtrusive.min.js"></script>

